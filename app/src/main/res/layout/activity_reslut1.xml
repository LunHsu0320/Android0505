<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.result.Result1Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="這是武田家"
            android:onClick="click_mitsu"
            android:scaleType="fitXY"
            android:src="@drawable/mitsubaaoi" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="這是真田家"
            android:onClick="click_roku"
            android:scaleType="fitXY"
            android:src="@drawable/rokumonsen"
            />


    </LinearLayout>

</LinearLayout>